&lt;span id="cb4-4"&gt;&lt;a href="#cb4-4"&gt;&lt;/a&gt; &lt;span class="at"&gt;:site-url&lt;/span&gt;                     &lt;span class="st"&gt;&amp;quot;http://blogawesome.com/&amp;quot;&lt;/span&gt;&lt;/span&gt;
&lt;span id="cb4-5"&gt;&lt;a href="#cb4-5"&gt;&lt;/a&gt; &lt;span class="at"&gt;:post-root&lt;/span&gt;                    &lt;span class="st"&gt;&amp;quot;posts&amp;quot;&lt;/span&gt;&lt;/span&gt;
&lt;span id="cb4-6"&gt;&lt;a href="#cb4-6"&gt;&lt;/a&gt; &lt;span class="at"&gt;:page-root&lt;/span&gt;                    &lt;span class="st"&gt;&amp;quot;pages&amp;quot;&lt;/span&gt;&lt;/span&gt;
